---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import { getAllRandomNotes, sortMDByDate } from "@/utils";
const entries = await getAllRandomNotes();
const sorted = sortMDByDate(entries).slice(0, 10);
---

<PageLayout meta={{ title: "Utils", slug: "/utils" }}>
	<section>
		<h1 class="title mb-6">Utils is my node_modules of notes</h1>
		<p class="mb-4">
			Every codebase has a "utils" directory full of random function and modules. Welcome to my
			note's version of that util directory.
		</p>
		<p class="mb-4">
			This is a place where I can link someone to a startup idea, a software hypothesis, or any
			other thing I might need to send to someone in the future.
		</p>

		<ul class="space-y-4 border-t">
			<div class="h-2"></div>
			{
				sorted.map((p) => (
					<li class="flex flex-col flex-wrap gap-2 sm:flex-row [&_q]:basis-full">
						<PostPreview withDesc basePath="utils" post={p} as="h2" />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
